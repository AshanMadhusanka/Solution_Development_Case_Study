@model IEnumerable<InventoryControl.Models.InventoryInfomation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
      <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
}

<h1>Inventory Control System </h1>



<p>
    <a asp-action="Create" class="btn btn-danger">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NuOfUnit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReOrderLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NuOfUnit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReOrderLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.InventId" class="btn btn-danger">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.InventId" class="btn btn-danger">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.InventId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
